<!DOCTYPE html>
<html>
    <head>
        <title>admin articles page</title>
        <link rel='stylesheet' href='/stylesheets/style.css' />

        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
        <link type="text/css" rel="stylesheet" href="/stylesheets/materialize.min.css"  media="screen,projection"/>

        <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    </head>
    <body>

        <h4>Interface gestion de contenu page <%= page %></h4><br>
        <table class="centered">
            <thead>
                <tr>
                    <th>Titre</th>
                    <th>Description</th>
                    <th>Date</th>
                    <th>Illustration</th>
                    <th>Type</th>
                    <th>Editer</th>
                    <th>Supprimer</th>
                    <th>Contenu/Lien</th>
                </tr>
            </thead>

            <tbody>

                <% articles.forEach(function(article){ %>
                <% var date = (("0" + article.createdAt.getDate()).slice(-2)) + '/' + ("0" + (article.createdAt.getMonth() + 1)).slice(-2) + '/' +  article.createdAt.getFullYear() + " Ã  " + article.createdAt.getHours() + "h" + article.createdAt.getUTCMinutes(); %>
                <tr>
                    <td><%= article.title %></td>
                    <td><%= article.description %></td>
                    <td><%= date %></td>
                    <td><%= article.illustration %></td>
                    <td><%= article.type %></td>
                    <td>
                        <a class="modify-article btn-floating btn-small waves-effect waves-light orange">
                            <input type="hidden" value="<%= article.id %>" />
                            <i class="material-icons">create</i>
                        </a>
                    </td>
                    <td>
                        <a class="delete-article btn-floating btn-small waves-effect waves-light red">
                            <input type="hidden" value="<%= article.id %>" />
                            <i class="material-icons">clear</i>
                        </a>
                    </td>
                    <td>
                        <a class="content-article btn-floating btn-small waves-effect waves-light purple lighten-3">
                            <input type="hidden" value="<%= article.id %>" />
                            <i class="material-icons">build</i>
                        </a>
                    </td>
                </tr>
                <% }); %>
            </tbody>
        </table>


        <div class="fixed-action-btn">
            <a class="btn-floating btn-large blue lighten-3 add-content">
                <input type="hidden" value="" />
                <i class="large material-icons">add</i>
            </a>
        </div>

        <script type="text/javascript" src="/javascripts/jquery.js"></script>
        <script type="text/javascript" src="/javascripts/materialize.min.js"></script>
        <script type="text/javascript" src="/javascripts/sweetalert.js"></script>
        <script type="text/javascript" src="/javascripts/imports.js"></script>
        <script type="text/javascript" src="/javascripts/actions.js"></script>
    </body>
</html>